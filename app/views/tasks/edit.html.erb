<div class="form">
  <%= form_with(model: @task) do |f|  %>
    <%= render "shared/error_messages" %>
    <div class="form__item">
      <%= f.label :title, "タイトル", class: "form__label" %>
      <%= f.text_field :title, class: "form__input" %>
    </div>
    <div class="form__item">
      <%= f.label :content, "詳細", class: "form__label" %>
      <%= f.text_area :content, class: "form__textarea" %>
    </div>
    <div class="form__item">
      <%= link_to "戻る", root_path, class: "task-link task-link--back task-link--border" %>
      <%= f.submit "更新", class: "form__submit" %>
    </div>
  <% end %>
</div>
